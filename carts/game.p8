function _init()
x= 25 --sprite right/left pos
y=25 --sprite up/down pos
end

function _update() --1,1
	if btnp(➡️) then
		x+=8 
	end
	
	if btnp(⬅️) then
		x=x-8 
	end

	if btnp(⬇️) then
		y=y+8 
	end
	
	if btnp(⬆️) then
		y=y-8 
	end

end 
function _draw()
 cls()
 spr(1,25,25)
end

